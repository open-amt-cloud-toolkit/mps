{
  "name": "mps-microservice",
  "version": "0.0.1",
  "description": "Containerized MPS service",
  "scripts": {
    "build": "tsc --w",
    "compile": "tsc",
    "start": "tsc && ts-node ./dist/index.js",
    "copy-dep": "npx copyfiles -f ./node_modules/react/umd/*.js ./node_modules/react-dom/umd/*.js ./ui/dist/react",
    "test": "jest -c ./ui/jest.config.ui.js ./ui --coverage && jest --testPathIgnorePatterns=./ui --coverage",
    "test-kvm": "tsc && ts-node ./dist/test/kvmui.test.ws.js",
    "build-kvm-prod": "npm run copy-dep && npx mkdirp ./ui/dist && browserify -p [tsify -p ui/tsconfig.json]  -t scssify -t uglifyify ui/reactjs/components/UI.tsx -s uitk -v > ./ui/dist/bundle.core.min.js",
    "build-kvm-dev": "npm run copy-dep && npx mkdirp ./ui/dist && watchify -p [tsify -p ui/tsconfig.json] -t scssify ui/reactjs/components/UI.tsx -s uitk -v -o ./ui/dist/bundle.core.js"
  },
  "author": "",
  "license": "Apache-2.0",
  "dependencies": {
    "crypto-random-string": "^3.0.1",
    "express": "^4.17.1",
    "express-ws": "^4.0.0",
    "filereader": "^0.10.3",
    "md5": "^2.2.1",
    "minimist": "^1.2.3",
    "node-forge": "^0.9.1",
    "react": "16.8.4",
    "react-dom": "^16.10.2",
    "recompose": "^0.30.0",
    "rxjs": "^6.5.3",
    "winston": "^3.0.0",
    "ws": "^7.1.2"
  },
  "devDependencies": {
    "enzyme": "^3.10.0",
    "enzyme-adapter-react-16": "^1.14.0",
    "@types/enzyme": "^3.10.3",
    "@types/enzyme-adapter-react-16": "^1.0.5",
    "@babel/core": "^7.5.5",
    "jest-transform-stub": "^2.0.0",
    "@babel/preset-env": "^7.5.5",
    "@babel/preset-typescript": "^7.3.3",
    "@babel/preset-react": "^7.0.0",
    "@types/body-parser": "^1.17.1",
    "@types/md5": "^2.1.33",
    "@types/jest": "^24.0.18",
    "@types/node": "^11.13.20",
    "@types/react": "^16.9.2",
    "@types/react-dom": "^16.9.0",
    "@types/node-forge": "^0.8.4",
    "browserify": "^16.5.0",
    "scssify": "^3.0.1",
    "source-map-loader": "^0.2.4",
    "tinyify": "^2.5.1",
    "canvas": "^2.6.0",
    "ts-loader": "^6.0.4",
    "ts-node": "^8.1.0",
    "@types/ws": "^6.0.1",
    "jest": "^24.8.0",
    "ts-jest": "^24.0.2",
    "tsify": "^4.0.1",
    "typescript": "^3.6.2",
    "uglifyify": "^5.0.2",
    "watchify": "^3.11.1"
  }
}
